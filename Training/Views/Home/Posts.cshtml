@model ICollection<Training.Dto.PostDto>

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

@if (Model.Count == 0)
{
    <h3>Nothing has been posted yet</h3>
}
else
{
    foreach (var post in Model)
    {
        <h5>@post.Title</h5>
        <div>@post.Body</div>
        <div>@post.CreationDateTimeUtc</div>
        <hr />
    }
}